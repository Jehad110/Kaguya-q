export default {
    name: "اقتباس",
    author: "kaguya project",
    role: "member",
    description: "يرسل اقتباسات عشوائية مختارة مسبقًا.",

    execute({ api, event }) {
        try {
            // Randomly select an index from the quotes array
            const randomIndex = Math.floor(Math.random() * quotes.length);

            // Send the randomly selected quote to the user
            api.sendMessage(quotes[randomIndex], event.threadID);
        } catch (error) {
            console.error("حدث خطأ أثناء جلب الاقتباس:", error);
            api.sendMessage("عذرًا، حدث خطأ ما أثناء جلب الاقتباس.", event.threadID);
        }
    }
};

// List of quotes
const quotes = [
    "الحياة ليست عبارة عن انتظار العاصفة، بل عن تعلم كيفية الرقص تحت المطر.",
    "السعادة هي لحظات قليلة من الهدوء بين فترات الألم.",
    "المثابرة هي المفتاح الذي يفتح أبواب النجاح.",
    "العقل الهادئ هو سلاحك الأقوى.",
    "الصداقة الحقيقية تبدأ حينما تنتهي الكلمات وتبدأ المشاعر.",
    "النجاح هو نتيجة التخطيط، العمل الجاد وتعلم الدروس من الأخطاء.",
    "إذا كان لديك حلم، فلا تدع أحداً يقنعك بالتخلي عنه.",
    "كل نجاح يبدأ بقرار لمحاولة واحدة.",
    "التحديات هي التي تجعل الحياة مثيرة.",
    "لا شيء مستحيل إذا كان لديك الإصرار والإرادة.",
    "التفاؤل هو المفتاح لفتح أبواب الفرص.",
    "اعمل بجد وتوقع النجاح.",
    "استمر في النمو وتطوير الذات.",
    "الابتسامة هي لغة القلوب الجميلة.",
    "الحب والاحترام هما أساس علاقاتنا.",
    "الصبر هو صديقك في رحلة الحياة.",
    "التعلم المستمر هو المفتاح للتطور الشخصي.",
    "التغيير هو جزء لا يتجزأ من الحياة.",
    "الاستماع الفعال هو سر الفهم العميق.",
    "لا تدع الأمس يحجب عنك غدًا أفضل."
];
